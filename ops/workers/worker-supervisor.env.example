REDIS_HOST=127.0.0.1
REDIS_PORT=6379
REDIS_PASSWORD=your-redis-password

# Optional: enable restarts when down
WORKER_SUPERVISOR_RESTART=true

# Patterns to match workers
WORKER_SYSTEMD_REGEX=worker
WORKER_SYSTEMD_EXCLUDE_REGEX=worker-supervisor
WORKER_PM2_REGEX=worker
WORKER_DOCKER_REGEX=worker
WORKER_DOCKER_PROBE_ENABLED=true
WORKER_DOCKER_PROBE_CMD=kill -0 1
WORKER_DOCKER_PROBE_TIMEOUT_SEC=5

# TTL for status payload in Redis (seconds)
WORKER_SUPERVISOR_TTL_SEC=600
